<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminSignIn"
    android:background="@drawable/grad_bg">


    <RelativeLayout
        android:id="@+id/adminDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_centerHorizontal="true"
            android:layout_height="150dp"
            android:id="@+id/adminUsername"
            android:src="@drawable/admin_"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:id="@+id/adminPass"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_bg"
            android:gravity="center"
            android:hint="Enter Admin Password"
            android:inputType="text"
            android:layout_below="@+id/adminUsername"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminDetails"
        android:layout_marginTop="50dp"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_3"
            android:layout_centerHorizontal="true"
            android:text="Login"
            android:id="@+id/loginAdmin"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</RelativeLayout>